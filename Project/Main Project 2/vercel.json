{
  "version": 2,
  "builds": [
    {
      "src": "Server/package.json",
      "use": "@vercel/node",
      "config": { "includeFiles": ["**/*"] }
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/Server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/Frontend/$1"
    }
  ]
} 
